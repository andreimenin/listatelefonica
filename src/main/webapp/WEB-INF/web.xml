<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.1"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
	<!-- Nome da Aplicação -->
	<display-name>listatelefonica</display-name>


	<!-- LOCALIZAÇÃO DO FACES CONFIG -->
	<context-param>
		<param-name>javax.faces.CONFIG_FILES</param-name>
		<param-value>/WEB-INF/faces-config.xml</param-value>
	</context-param>
	<!-- ESTÁGIO DO PROJETO (DESENVOLVIMENTO) -->
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>
	<!-- TEMA DO PRIMEFACES -->
	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>aristo</param-value>
	</context-param>
	<!-- DEFINIÇÃO DO MECANISMO DE UPLOAD -->
	<context-param>
		<param-name>primefaces.UPLOADER</param-name>
		<param-value>native</param-value>
	</context-param>
	
	<context-param>
	    <param-name>primefaces.FONT_AWESOME</param-name>
	    <param-value>false</param-value>
	</context-param>

	<!-- <context-param> -->
	<!-- <param-name>javax.faces.STATE_SAVING_METHOD</param-name> -->
	<!-- <param-value>server</param-value> -->
	<!-- </context-param> -->

	<!-- Carregamento forçado do Hibernate junto com o Tomcat -->
	<listener>
		<listener-class>br.com.listatelefonica.util.HibernateContexto</listener-class>
	</listener>
	<!-- CONFIGURAÇÃO DO JSF -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
		<!-- FAZENDO COM QUE O JSF GERENCIE OS ARQUIVOS .XHTML -->
	</servlet-mapping>
	<!-- Página Principal -->
	<welcome-file-list>
		<welcome-file>pages/listaTelefonica.xhtml</welcome-file>
	</welcome-file-list>

	<error-page>
		<error-code>404</error-code>
		<location>/pages/listaTelefonica.xhtml</location>
	</error-page>

	<error-page>
		<error-code>500</error-code>
		<location>/pages/listaTelefonica.xhtml</location>
	</error-page>

	<filter>
		<filter-name>cache</filter-name>
		<filter-class>br.com.listatelefonica.filter.NoCacheFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>cache</filter-name>
		<url-pattern>*.xhtml</url-pattern>
	</filter-mapping>
	



</web-app>
